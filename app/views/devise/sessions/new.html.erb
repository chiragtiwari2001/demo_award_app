<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4"><%= resource_name == :user && controller_name == "registrations" ? "Sign Up" : "Log In" %></h2>

    <%= form_for(resource, as: resource_name, url: resource_name == :user && controller_name == "registrations" ? registration_path(resource_name) : session_path(resource_name), html: { class: "needs-validation" }) do |f| %>

      <% if resource_name == :user && controller_name == "registrations" %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
      </div>

      <% if controller_name == "registrations" %>
        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
        </div>
      <% elsif controller_name == "sessions" %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <%= f.submit resource_name == :user && controller_name == "registrations" ? "Sign Up" : "Log In", class: "btn btn-primary w-100" %>

    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
