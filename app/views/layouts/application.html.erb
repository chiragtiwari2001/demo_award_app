<!DOCTYPE html>
<html>
  <head>
    <title>AwardApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 sticky-top">
        <div class="container">
          <a class="navbar-brand d-flex align-items-start flex-column flex-lg-row gap-2" href="#">
            <%= image_tag("Designawards.png", alt: "Logo", class: "me-lg-2") %>
          </a>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 text-uppercase fw-semibold">
              <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
              <li class="nav-item"><a class="nav-link" href="#">About</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Why Nominate</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Selection Process</a></li>
              <li class="nav-item"><a class="nav-link" href="#">FAQ</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Gallery</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Past Speakers</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>

    <% if flash.any? %>
      <div class="flash-container">
        <% flash.each do |key, message| %>
          <div class="alert alert-<%= key == 'notice' ? 'info' : (key == 'success' ? 'success' : (key == 'alert' ? 'warning' : 'danger')) %> alert-dismissible fade show flash-message" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
      </div>
    <% end %>

    <%= yield %>

    <% if flash.any? %>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          setTimeout(function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(function(flashMessage) {
              bootstrap.Alert.getOrCreateInstance(flashMessage).close();
            });
          }, 5000);
        });
      </script>
    <% end %>
  </body>
</html>
